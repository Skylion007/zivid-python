[MESSAGES CONTROL]
disable=missing-docstring,
        consider-using-f-string # Keep .format() as long as we want unofficial python3.5 support

[FORMAT]
max-line-length=150 # Generated code for data-models will sometimes have long lines.

# Allow long lines if they contains long strings
ignore-long-lines="[^"]{80,}"

[TYPECHECK]
ignored-classes=pytest # E1101: Module 'pytest' has no 'helpers' member (no-member)